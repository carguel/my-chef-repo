<%basedn = node["cg_openldap"]["basedn"]%>
<%first_item = basedn.match(/dc=([^,]++)/)[1]%>

# Create base dn
dn: <%=basedn%>
dc: <%=first_item%>
description: <%=node["cg_openldap"]["basedn_description"]%>
objectClass: dcObject
objectClass: organization
o: <%=first_item%>

# Create users OU
dn: ou=users,<%=basedn%>
objectClass: top
objectClass: organizationalUnit
ou: users

# Create groups OU
dn: ou=groups,<%=basedn%>
objectClass: top
objectClass: organizationalUnit
ou: groups
